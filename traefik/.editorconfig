# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.feature]
indent_size = 2

[.gitmodules]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.xml]
indent_size = 4

[*.{yaml,yml}]
indent_size = 4
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 2

[*.conf]
indent_size = 2

[.travis.yml]
indent_size = 2

[composer.json]
indent_size = 4

[docker-compose*.{yaml,yml}]
indent_size = 2

[Dockerfile]
indent_style = tab

[package.json]
indent_size = 2

[{phpunit.xml,phpunit.xml.dist}]
indent_size = 4

[*.{php,html,twig}]
indent_size = 4

[*.js]
indent_size = 4

[*.sql]
indent_size = 2
